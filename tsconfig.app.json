{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": false,
    "allowJs": true,
    "declaration": false,
    "types": ["vue/ref-macros", "vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
